<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin"
	group="search"
	version="3.4"
	method="upgrade">
	<name>PLG_SEARCH_MONITOR</name>
	<author>Constantin Romankiewicz</author>
	<creationDate>2016</creationDate>
	<license>Apache License 2.0 (see LICENSE)</license>
	<authorEmail>constantin@zweiiconkram.de</authorEmail>
	<authorUrl>www.zweiiconkram.de</authorUrl>
	<version>0.0.1</version>
	<description>PLG_SEARCH_MONITOR_XML_DESCRIPTION</description>

	<files>
		<filename plugin="monitor">monitor.php</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="target"
					type="list"
					label="PLG_SEARCH_MONITOR_FIELD_TARGET_LABEL"
					description="PLG_SEARCH_MONITOR_FIELD_TARGET_DESC"
					default="0"
					filter="int"
				>
					<option value="0">JBROWSERTARGET_PARENT</option>
					<option value="1">JBROWSERTARGET_NEW</option>
				</field>
			</fieldset>
		</fields>
	</config>

	<languages folder="language">
		<language tag="de-DE">de-DE/de-DE.plg_search_monitor.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_search_monitor.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_search_monitor.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_search_monitor.sys.ini</language>
	</languages>
</extension>
